{% extends 'base.html.twig' %}

{% block title %}FITLAB - {{ muscleGroup.title }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/home.css') }}">
    <link rel="stylesheet" href="{{ asset('css/exercises.css') }}">
{% endblock %}

{% block body %}
    <div class="exercises-container">
        <!-- Header -->
        <header class="exercises-header">
            <div class="header-content">
                <a href="{{ path('app_home') }}" class="back-link">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M15 18L9 12L15 6" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                    RETOUR
                </a>
                <div class="logo-container">
                    <svg class="logo-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <circle cx="12" cy="6" r="2" fill="white"/>
                        <circle cx="6" cy="12" r="2" fill="white"/>
                        <circle cx="18" cy="12" r="2" fill="white"/>
                        <line x1="12" y1="6" x2="6" y2="12" stroke="white" stroke-width="1.5"/>
                        <line x1="12" y1="6" x2="18" y2="12" stroke="white" stroke-width="1.5"/>
                        <line x1="6" y1="12" x2="18" y2="12" stroke="white" stroke-width="1.5"/>
                        <rect x="10" y="10" width="4" height="4" fill="white"/>
                    </svg>
                    <h1 class="logo-text">FITLAB</h1>
                </div>
            </div>
        </header>

        <!-- Page Title -->
        <section class="exercises-title-section">
            <h2 class="exercises-title">{{ muscleGroup.title }}</h2>
            <p class="exercises-subtitle">{{ exercises|length }} exercice{{ exercises|length > 1 ? 's' : '' }} disponible{{ exercises|length > 1 ? 's' : '' }}</p>
        </section>

        <!-- Exercises Grid -->
        <section class="exercises-section">
            {% if exercises|length > 0 %}
                <div class="exercises-grid">
                    {% for exercise in exercises %}
                        <div class="exercise-card">
                            <div class="exercise-content">
                                <h3 class="exercise-name">{{ exercise.titlz }}</h3>
                                {% if exercise.content %}
                                    <p class="exercise-description">{{ exercise.content }}</p>
                                {% endif %}
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <div class="no-exercises">
                    <p class="no-exercises-text">Aucun exercice disponible pour ce groupe musculaire.</p>
                </div>
            {% endif %}
        </section>
    </div>
{% endblock %}
